@page "/"
@inject NavigationManager nav

<div class="splash-bg">
    <div class="splash-content">
        <img src="images/logo.png" alt="AlienCore Logo" class="splash-logo" />
        <h1>Welcome to AlienCore ESP Gateway</h1>
        <p class="lead">Bridging edge telemetry with AI ChatGPT powered insights</p>
        <button class="btn btn-primary btn-lg mt-3" @onclick="EnterApp">
            Go to Login
        </button>
    </div>
</div>

@code {
    private void EnterApp()
    {
        nav.NavigateTo("/login");
    }
}